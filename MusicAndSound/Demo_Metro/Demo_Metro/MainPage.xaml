<Page
    x:Class="Demo_Metro.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Demo_Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
		<TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="WAV Sound:" VerticalAlignment="Top"/>
		<Button Content="Play" HorizontalAlignment="Left" Margin="75,10,0,0" VerticalAlignment="Top" Name="playSound" Click="playSound_Click"/>
		<Button Content="Pause" HorizontalAlignment="Left" Margin="142,10,0,0" VerticalAlignment="Top" Name="pauseSound" Click="pauseSound_Click"/>
		<Button Content="Stop" HorizontalAlignment="Left" Margin="220,10,0,0" VerticalAlignment="Top" Name="stopSound" Click="stopSound_Click"/>

		<TextBlock HorizontalAlignment="Left" Margin="10,53,0,0" TextWrapping="Wrap" Text="MP3 Music:" VerticalAlignment="Top"/>
		<Button Content="Play" HorizontalAlignment="Left" Margin="75,53,0,0" VerticalAlignment="Top" Name="playMusic"/>
		<Button Content="Pause" HorizontalAlignment="Left" Margin="142,53,0,0" VerticalAlignment="Top" Name="pauseMusic"/>
		<Button Content="Stop" HorizontalAlignment="Left" Margin="220,53,0,0" VerticalAlignment="Top" Name="stopMusic"/>
	</Grid>
</Page>
